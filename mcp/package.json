      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@surface.dev/utils": "file:../../utils",
    "pg": "^8.14.1",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "typescript": "5.5.3"
  }
