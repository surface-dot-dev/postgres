{
  "name": "@surface.dev/postgres-mcp",
  "version": "0.0.1",
  "description": "Surface MCP server for Postgres",
  "keywords": [
    "javascript",
    "typescript",
    "surface",
    "surface.dev",
    "postgres",
    "postgresql",
    "psql",
    "mcp",
    "server"
  ],
  "homepage": "https://github.com/surface-dot-dev/postgres",
  "bugs": "https://github.com/surface-dot-dev/postgres/issues",
  "license": "MIT",
  "author": "Surface (https://surface.dev)",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": "surface-dot-dev/postgres",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,test}/**/*.{ts,tsx}\"",
