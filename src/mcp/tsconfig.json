{
  "include": ["."],
  "exclude": ["node_modules", "dist", "tools/**/index.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  }
}
